<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MediumTextViewThin">

        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/poppins_thin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextViewThin">
    <item name="android:textColor">@color/g_gray700</item>
    <item name="android:textSize">@dimen/_10ssp</item>
    <item name="fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="singleLine">true</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="AlertDialogCustomStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FF0000</item> <!-- Customize cancel button color -->
        <item name="android:textAllCaps">false</item> <!-- Set all caps to false -->
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#1FC57A</item> <!-- Customize yes button color -->
        <item name="android:textAllCaps">false</item> <!-- Set all caps to false -->
    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="boxStrokeColor">@color/text_color</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_color</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HelpDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">280dp</item>
        <item name="android:windowMinWidthMinor">280dp</item>
    </style>

</resources>